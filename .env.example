# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# API Keys (optional for enhanced data)
QUIVER_API_KEY=your_quiver_api_key_here

# Scraping Configuration
SCRAPING_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30
USER_AGENT=Mozilla/5.0 (compatible; PoliticianTradingTracker/1.0)

# Database Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_US_CONGRESS=true
ENABLE_UK_PARLIAMENT=true
ENABLE_EU_PARLIAMENT=true
ENABLE_US_STATES=true
ENABLE_CALIFORNIA=true

# Rate Limiting
REQUESTS_PER_SECOND=2
BURST_SIZE=5

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090
