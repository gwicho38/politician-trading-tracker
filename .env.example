# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# API Keys (optional for enhanced data)
QUIVER_API_KEY=your_quiver_api_key_here

# Alpaca Trading API (for automated trading)
# Get your keys from: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true  # Set to false for live trading

# Scraping Configuration
SCRAPING_DELAY=1.0
MAX_RETRIES=3
TIMEOUT=30
USER_AGENT=Mozilla/5.0 (compatible; PoliticianTradingTracker/1.0)

# Database Configuration
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_US_CONGRESS=true
ENABLE_UK_PARLIAMENT=true
ENABLE_EU_PARLIAMENT=true
ENABLE_US_STATES=true
ENABLE_CALIFORNIA=true

# Rate Limiting
REQUESTS_PER_SECOND=2
BURST_SIZE=5

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# ============================================================================
# Alert Configuration
# ============================================================================

# Email Alerting (SMTP)
SMTP_HOST=smtp.gmail.com              # SMTP server hostname
SMTP_PORT=587                          # SMTP port (587=TLS, 465=SSL)
SMTP_USER=your-email@gmail.com         # SMTP username
SMTP_PASSWORD=your-app-specific-password  # SMTP password or app password
ALERT_FROM_EMAIL=alerts@yourdomain.com    # From address (optional)
ALERT_TO_EMAILS=admin@yourdomain.com,ops@yourdomain.com  # Recipients (comma-separated)

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#monitoring  # Optional

# Discord Alerting
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Generic Webhook
ALERT_WEBHOOK_URL=https://your-monitoring-system.com/webhook

# Alert Thresholds
ALERT_CONSECUTIVE_FAILURES=3       # Trigger alert after N consecutive failures
ALERT_MAX_FAILURE_RATE=0.5         # Alert if success rate below 50%
ALERT_MAX_AGE_HOURS=24             # Alert if no successful run in N hours

# Circuit Breaker
CIRCUIT_BREAKER_THRESHOLD=5        # Failures before circuit opens
CIRCUIT_BREAKER_TIMEOUT=120        # Seconds before attempting recovery

# Trading Configuration
TRADING_AUTO_EXECUTE=false  # Set to true to enable automatic trade execution
TRADING_MIN_CONFIDENCE=0.65  # Minimum signal confidence to trade (0.0 to 1.0)

# Risk Management
RISK_MAX_POSITION_SIZE_PCT=10.0  # Max position size as % of portfolio
RISK_MAX_PORTFOLIO_RISK_PCT=2.0  # Max risk per trade as % of portfolio
RISK_MAX_TOTAL_EXPOSURE_PCT=80.0  # Max total exposure as % of portfolio
RISK_MAX_POSITIONS=20  # Maximum number of open positions
